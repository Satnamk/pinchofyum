<!-- addhome.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title }) %>

  <body>
<%- include('partials/navbar2') %>
    <div class="container">
      <div class="row">
          <div class="col-lg-5 mx-auto">
              <div class="section-content bg-white p-5 shadow">
                  <div class="heading-section text-center">
                      <h2>
                        Signup
                      </h2>
                  </div>
        <form action="/user/signup" method="POST">
          <div class="row">
            <div class="col-md-12 form-group">
           
          <input
            type="email"
            id="email" class="form-control" placeholder="Email"
            name="email"
            value=""
            required
          />
        </div>
        <div class="col-md-12 form-group">
          <input
            value=""
            type="password"
            id="password" class="form-control" placeholder="Password"
            name="password"
            required
          />
        </div>
        <div class="col-md-12 form-group">
          <div class="col-md-12 form-group">
            <input type="date" id="age" class="form-control" placeholder="Age" name="age" />
          </div>
      </div>
        <div class="col-md-12 text-center">
          <button class="btn btn-primary btn-shadow btn-lg" type="submit">Signup</button>
        </div>
        </div>
        </form>
      </div>
    </div>
</div></div>
    <%- include('partials/footer') %>
  </body>
</html>
