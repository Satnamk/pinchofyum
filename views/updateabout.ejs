<!-- updateabout.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Update page" }) %>
<body>
  <%- include('partials/navbar') %>

  <div class="content">
    <div class="update">
      <h2>Update About</h2>
      <form action="/single-about/<%= about._id %>?_method=PUT" method="POST">

        <div class="col-md-12 form-group">
            <label>Image:</label
            ><input type="file" value="<%= about.image %>" id="image" name="image" class="form-control" required />
          </div>
        <div class="col-md-12 form-group">
            <label>Title:</label
            ><input type="text" value="<%= about.title %>" id="title" name="title" class="form-control" required />
          </div>
          <div class="col-md-12 form-group">
            <label>Subtitle:</label
            ><input type="text" value="<%= about.subtitle %>" id="subtitle" name="subtitle" class="form-control" required />
          </div>
          <div class="col-md-12 form-group">
            <textarea rows="4" cols="50" value="<%= about.content %>" id="content" name="content" class="form-control" required>
            </textarea>          
          </div>
          <div class="col-md-12 form-group">
            <label>Special Recipe:</label
            ><input type="text" value="<%= about.recipe %>" id="recipes" name="recipes" class="form-control" required />
          </div>
          <div class="col-md-12 form-group">
            <label>Photo:</label
            ><input type="file" value="<%= about.photo %>" id="photos" name="photos" class="form-control" required />
          </div>
          <div class="col-md-12 form-group">
            <label>Recipe Name:</label
            ><input type="text" value="<%= about.name %>" id="name" name="name" class="form-control" required />
          </div>

          <button class="btn btn-primary btn-shadow btn-lg" type="submit">Add About</button>
      </form>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
