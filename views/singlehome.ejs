<!-- Define a function to render the home -->
<% function renderHome(home) { %>
  <div class="item-details">
    <article>
      <h2>Title: <%= home.title %></h2>
      <div><strong>Button:</strong> <%= home.button %></div>
      <p>
        <!-- <strong>Image:</strong> <%= home.image %><br /> -->
      </p>
  
      <!-- Update button -->
      <form
        class="action-form"
        method="GET"
        action="/single-home/update/<%= home._id %>"
      >
        <button type="submit" class="update">update</button>
      </form>
  
      <!-- Delete button -->
      <form
        class="action-form"
        method="POST"
        action="/single-home/<%= home._id %>?_method=DELETE"
      >
        <button type="submit">delete</button>
      </form>
    </article>
  </div>
  <% } %>

    
  <% 
  function formatDate(dateString) {
      const date = new Date(dateString);
      // Format the date as desired (e.g., YYYY-MM-DD)
      const formattedDate = date.toLocaleDateString('fi-FI', { year: 'numeric', month: 'long', day: 'numeric' });
      return formattedDate;
  } 
  %>

<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: home.title }) %>
  <body>
    <%- include('partials/navbar.ejs') %>
    
    <%- include('partials/single.ejs') %>
    <div class="content">
      <div class="home">
        <div class="item-list">
          <% if (home) { %> <%= renderHome(home) %> <% } else { %>
          <p>No home found.</p>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
