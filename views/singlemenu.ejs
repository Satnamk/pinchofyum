<!-- Define a function to render the menu -->
<% function renderMenu(menu) { %>
    <div class="item-details">
      <article>
        <h2>Title: <%= menu.title %></h2>
        <div><strong>Button:</strong> <%= menu.button %></div>
        <p>
          <!-- <strong>Image:</strong> <%= menu.image %><br /> -->
        </p>
    
        <!-- Update button -->
        <form
          class="action-form"
          method="GET"
          action="/single-menu/update/<%= menu._id %>"
        >
          <button type="submit" class="update">update</button>
        </form>
    
        <!-- Delete button -->
        <form
          class="action-form"
          method="POST"
          action="/single-menu/<%= menu._id %>?_method=DELETE"
        >
          <button type="submit">delete</button>
        </form>
      </article>
    </div>
    <% } %>
  
      
    <% 
    function formatDate(dateString) {
        const date = new Date(dateString);
        // Format the date as desired (e.g., YYYY-MM-DD)
        const formattedDate = date.toLocaleDateString('fi-FI', { year: 'numeric', month: 'long', day: 'numeric' });
        return formattedDate;
    } 
    %>
  
  <!DOCTYPE html>
  <html lang="en">
    <!-- Pass a JavaScript variable to a partial in EJS -->
    <%- include('partials/head.ejs', { title: menu.title }) %>
    <body>
      <%- include('partials/navbar.ejs') %>
      
      <%- include('partials/single.ejs') %>
      <div class="content">
        <div class="menu">
          <div class="item-list">
            <% if (menu) { %> <%= renderMenu(menu) %> <% } else { %>
            <p>No menu found.</p>
            <% } %>
          </div>
        </div>
      </div>
  
      <%- include('partials/footer.ejs') %>
    </body>
  </html>
  